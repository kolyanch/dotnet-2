<Window x:Class="Lab2Gis.Views.AtmsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Lab2Gis.ViewModels" 
        mc:Ignorable="d"
        Title="Банкоматы" Height="450" Width="800">
    <Window.DataContext>
        <viewModels:AtmsViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid ItemsSource="{Binding Atms}" SelectionMode="Single" SelectedItem="{Binding SelectedAtm}"
                  AutoGenerateColumns="false" >
            <DataGrid.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" 
                              Command="{Binding ShowAtmCommand}"/>
            </DataGrid.InputBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Банк" Binding="{Binding Name}" Width="*" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="Баланс" Binding="{Binding AtmStatus.Money}" IsReadOnly="True"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
